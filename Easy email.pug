doctype html
html
  head
    title Email Service Configuration
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-danger.fixed-top
      .container
        a.navbar-brand(href="#") Email Service
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href="#") Home

    .container.mt-5
      h1 Email Service Configuration

      form(action="/save-config", method="post")
        label(for="serviceName") Service Name:
        input(type="text", name="serviceName", class="form-control", required)

        label(for="users") Users (comma-separated):
        input(type="text", name="users", class="form-control", required)

        button(type="submit", class="btn btn-primary mt-3") Save Configuration

      hr

      h2 Current Configurations
      each service in services
        div
          strong Service Name: #{service.serviceName}
          p Users: #{service.users.join(', ')}

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script.
      const services = !{JSON.stringify(services)};
